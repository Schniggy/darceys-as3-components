package com.darcey.utils
{
	// -------------------------------------------------------------------------------------------------------------------------------

	
	import flash.external.ExternalInterface;

	// -------------------------------------------------------------------------------------------------------------------------------
	
	
	
	// -------------------------------------------------------------------------------------------------------------------------------
	public class JavaScriptNotification
	{

		
		
		// ---------------------------------------------------------------------------------------------------------------------------
		public function JavaScriptNotification(str:String)
		{
			
			var isAvailable:Boolean = ExternalInterface.available;
			if (isAvailable){
				try {
					ExternalInterface.call("receiveString",str);
				} catch(e:Error) {
					trace("######## JavaScriptNotification.SendStringToJavaScript(): Failed - " + e);
				}
			}
		}
		// ---------------------------------------------------------------------------------------------------------------------------
		
		
		
	}
	// -------------------------------------------------------------------------------------------------------------------------------
}